<p><strong>Other people's details...</strong></p>
<% if @tlk.spkrs.length == 1 %>
  <div class="tlk-note">
    <p>The details of people you invite to Taaalk with will appear here. You will be able to suggest edits to their name and bio.</p>
  </div>
<% end %>
<% @tlk.spkrs.each do |spkr| %>
  <% unless spkr.user == current_user %>
    <%= form_with model: spkr do |f| %>
      <%= f.text_field :name, id: "spkr-name-#{spkr.id}", class: 'spkr-edit' %>
      <%= f.text_field :bio, id: "spkr-bio-#{spkr.id}", class: 'spkr-edit' %>
      <%= f.submit "Update #{spkr.name.possessive} Details", class: 'btn btn-secondary' %>
    <% end %>
    <p id="unsaved-note-spkr-<%= spkr.id %>">Changes not saved. Press 'Update <%= spkr.name.possessive %> Details' to save.</p>
  <% end %>
<% end %>
