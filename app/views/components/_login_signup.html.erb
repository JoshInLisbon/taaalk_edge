<div class="d-flex flex-column calc-height-navbar">

  <% @devise = "" %>

  <div class="login-signup-div">
    <div class="bg-notice">
      <p>You must <strong>log in</strong> or <strong>sign up</strong> to follow and create Taaalks.</p>
      <p class="login-display-none"><strong>Scroll down</strong> to sign up.</p>
    </div>

    <div class="devise-styles flex-mob-block">

        <div class="login-div">
          <h2>Log in:</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, "Email:" %><br />
              <%= f.email_field :email, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, "Password:" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>

            <div class="actions">
              <%= f.submit "Log In" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, checked: true, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>


          <% end %>

          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>


        <div class="signup-div">
          <h2>Sign up:</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :username, "Your name (public facing):" %><br />
              <%= f.text_field :username %>
            </div>

            <div class="field">
              <%= f.label :email, "Email:" %><br />
              <%= f.email_field :email, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, "Password:" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm your password:" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign Up" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
  <div class="bg-white flex-grow-1"></div>
</div>
