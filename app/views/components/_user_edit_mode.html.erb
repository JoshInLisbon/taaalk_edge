<p><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn log-out-btn" %></p>
<div class="user-image"
  <% if @user.image.present? %>
    style="background-image: url(<%= rails_blob_url(@user.image) %>)"
  <% else %>
    style="background-image: url(<%= asset_url('user.svg') %>)"
  <% end %>
  >
</div>
<div class="spkr-user-edit-form">
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :image %>
    <%= f.input :username %>
    <%= f.input :email %>
    <p>Default Taaalk bio:</p>
    <%= f.rich_text_area :biog %>
    <p>People should Taaalk with you about:</p>
    <%= f.rich_text_area :tlk_with_me %>
    <p>Default 'Taaalk Request' message:</p>
    <%= f.rich_text_area :tlk_with_you %>
    <%= f.button :submit, 'Update Your Details' %>
  <% end %>
</div>
<p>Delete account</p>

<%= form_with model: @user do |f| %>

  <div class="index-background-color-medium">
    <div class="create-index-container">
      <div class="user-container user-border-bottom">
        <div class="user-image"
          <% if @user.image.present? %>
            style="background-image: url(<%= rails_blob_url(@user.image) %>)"
          <% else %>
            style="background-image: url(<%= asset_url('user.svg') %>)"
          <% end %>
          >
        </div>
        <label>
          <span class="mt-2 btn btn-dark">Upload Profile Image</span>
          <div id="update-tlk-file-name-div" class="text-success mt-2"></div>
          <span style="display:none;">
            <%= f.file_field :image, accept: 'image/png,image/jpeg', target: 'update-tlk' %>
          </span>
        </label>
        <div>
          <%= f.label :title, "Edit your name:", class: "mt-2 f-white" %><br />
          <%= f.text_field :username, class: 'mb-3 username-edit' %>
        </div>
      </div>
    </div>
  </div>

  <div class="spkr-user-edit-form">
    <div class="create-index-container">
      <div class="p-0 user-container">
        <div class="user-biog">
          <p>Default Taaalk bio:</p>
          <%= f.rich_text_area :biog %>
        </div>
        <div class="m-0 big-white-split"></div>
      </div>
    </div>



  </div>
<% end %>
