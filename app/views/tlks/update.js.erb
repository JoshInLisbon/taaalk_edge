var header = document.querySelector('.tlk-title');
var headerEdit = document.querySelector('.tlk-title-edit');
var tlkImages = document.querySelectorAll('.tlk-image');

header.innerText = headerEdit.value;
<% if @tlk.image.present? %>
  tlkImages.forEach(image => {
    image.style = "background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= url_for(@tlk.image.variant(combine_options: { resize_to_limit: [1600, nil], auto_orient: true, gravity: 'center' })) %>); background-size: cover; background-repeat: no-repeat; background-position: center;";
  });
<% end %>
