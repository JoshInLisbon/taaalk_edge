console.log('<%= @spkr.name %>');

let nameInput = document.querySelector('#name-spkr-<%= @spkr.id %>');
let bioInput = document.querySelector('#bio-spkr-<%= @spkr.id %>');
let images = document.querySelectorAll('.image-spkr-<%= @spkr.id %>')
let names = document.querySelectorAll('.name-spkr-<%= @spkr.id %>')
let bio = document.querySelector('.bio-spkr-<%= @spkr.id %>')
names.forEach(name => {
  name.innerText = '<%= @spkr.name %>'
});
images.forEach(image => {
  image.style = 'background-image: url(<%= rails_blob_url(@spkr.image) %>)'

});
bio.innerText = '<%= @spkr.bio %>'



