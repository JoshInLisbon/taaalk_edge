var nameInput = document.querySelector('#name-spkr-<%= @spkr.id %>');
var bioInput = document.querySelector('#biog-spkr-<%= @spkr.id %>');
var images = document.querySelectorAll('.image-spkr-<%= @spkr.id %>')
var names = document.querySelectorAll('.name-spkr-<%= @spkr.id %>')
var bio = document.querySelector('.biog-spkr-<%= @spkr.id %>');
var twitterHandleDiv = document.querySelector('#twitter-handle-div-<%= @spkr.id %>');
names.forEach(name => {
  name.innerText = '<%= @spkr.name %>'
});
<% if @spkr.image.present? %>
  images.forEach(image => {
    image.style = 'background-image: url(<%= url_for(@spkr.image.variant(combine_options: { resize: "104x104^", auto_orient: true, gravity: "center" })) %>)'
  });
<% end %>
console.log("biogInput");
console.log(bioInput.innerHTML);

if(bioInput.innerHTML) {
  bio.innerHTML = `<div style="text-align: left; display: inline-block;">${bioInput.innerHTML}</div>`
} else {
  bio.innerHTML = bioInput.innerHTML
}

<% if @spkr.twitter_handle.present? %>
  twitterHandleDiv.innerHTML = ` <a id="twitter-handle-<%= @spkr.id %>" class="twitter-handle" href="https://twitter.com/<%= @spkr.twitter_handle %>"><i class="fab fa-twitter"></i> <%= @spkr.twitter_handle %></a>`
<% else %>
  twitterHandleDiv.innerHTML = ""
<% end %>


var colors = document.querySelectorAll('.spkr-color-<%= @spkr.id %>');
colors.forEach(color => {
  color.children[0].classList = 'msg-<%= @spkr.color %>';
});
var editColor = document.querySelector('.edit-spkr-color-<%= @spkr.id %>')
editColor.children[0].classList = 'edit-msg-<%= @spkr.color %>';
