console.log("YESS");
var noteBtn = document.querySelector("#btn-spkr-notes-<%= @spkr.id %>");
var noteRta = document.querySelector("#spkr-notes-<%= @spkr.id %>");
noteBtn.classList.toggle('spkr-notes-btn-unsaved');
noteBtn.classList.toggle('spkr-notes-btn-saved');
var savedValue = "Saved";
setTimeout(function() {
  noteBtn.setAttribute('value', savedValue);
}, 5);
var noteStartValue = noteRta.value
noteRta.addEventListener('keyup', (event) => {
  if(noteStartValue != noteRta.value) {
    setTimeout(function() {
      noteBtn.setAttribute('value', "Save Notes");
      noteBtn.classList.add('spkr-notes-btn-unsaved');
      noteBtn.classList.remove('spkr-notes-btn-saved');
    }, 5);
  }
});


